<%- include('partials/user_header') %>
<div class="container fade-in mt-5">
  <h2 class="mb-4">Headmaster Dashboard</h2>
  <div class="row mb-4">
    <div class="col-md-4 mb-3">
      <div class="card text-center h-100">
        <div class="card-body">
          <h5 class="card-title">All Teaching Records</h5>
          <p class="card-text">View all teaching records and their status.</p>
          <a href="#recordtable" class="btn btn-primary">View Records</a>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <div class="card text-center h-100">
        <div class="card-body">
          <h5 class="card-title">Review & Feedback</h5>
          <p class="card-text">Review, give feedback, and rate teaching records.</p>
          <a href="#recordtable" class="btn btn-success">Review Records</a>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <div class="card text-center h-100">
        <div class="card-body">
          <h5 class="card-title">Reports & Analytics</h5>
          <p class="card-text">View analytics, charts, and export data for reporting.</p>
          <a href="/headmaster/reports" class="btn btn-primary" target="_blank">View Reports</a>
        </div>
      </div>
    </div>
  </div>
  <h3 class="mb-3" id="recordtable">All Teaching Records</h3>
  <table class="table table-bordered table-hover bg-white">
    <thead class="table-primary">
      <tr>
        <th>Date</th>
        <th>Teacher</th>
        <th>Class</th>
        <th>Subject</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% records.forEach(function(record) { %>
        <tr>
          <td><%= record.date %></td>
          <td><%= record.teacherName || record.userId %></td>
          <td><%= record.class %></td>
          <td><%= record.subject %></td>
          <td><span class="badge bg-info"><%= record.status %></span></td>
          <td>
            <a href="/headmaster/records/<%= record.id %>" class="btn btn-sm btn-primary">Review</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/dashboard" class="btn btn-outline-secondary mt-3">Back to Dashboard</a>
</div>
<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 