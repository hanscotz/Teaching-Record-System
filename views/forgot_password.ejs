<%- include('partials/user_header') %>
<style>
  .forgot-bg { min-height: 100vh; display: flex; align-items: center; justify-content: center; }
  .forgot-card { background: rgba(142,36,170,0.85); border-radius: 2rem; box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37); border: 1px solid rgba(255,255,255,0.18); color: #fff; animation: fadeIn 1s; width: 100%; max-width: 420px; min-height: 320px; margin: 0 auto; display: flex; align-items: center; }
  .forgot-card .card-body { width: 100%; }
  .forgot-card .form-control { border-radius: 2rem; border: none; box-shadow: none; }
  .forgot-card .btn-primary { border-radius: 2rem; font-weight: bold; background: #fff !important; color: #8e24aa !important; border: none; }
  .forgot-card .btn-primary:hover { background: #c158dc !important; color: #fff !important; }
</style>
<div class="forgot-bg">
  <div class="forgot-card shadow-lg border-0">
    <div class="card-body p-5">
      <h2 class="card-title mb-4 text-center">Forgot Password</h2>
      <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>
      <% if (success) { %><div class="alert alert-success"><%= success %></div><% } %>
      <form method="post" autocomplete="off">
        <div class="mb-3">
          <input name="email" type="email" class="form-control" placeholder="Enter your email" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Send Code</button>
      </form>
      <div class="text-center mt-3">
        <a href="/login" class="text-white">Back to Login</a>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %> 