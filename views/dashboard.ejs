<%- include('partials/user_header') %>
<div class="container fade-in mt-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <h1 class="mb-3">Welcome, <%= user.firstName %> <%= user.lastName %>!</h1>
      <p class="lead">This is your teacher dashboard. Here you can manage your teaching records and see your weekly summary.</p>
    </div>
    <div class="col-md-4 text-end">
      <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-4 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Assigned Periods/Week</h5>
          <span class="display-6"><%= user.periodsPerWeek || 0 %></span>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">My Records</h5>
          <a href="/records" class="btn btn-primary w-100">View All Records</a>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Add New Record</h5>
          <a href="/records/new" class="btn btn-success w-100">New Teaching Record</a>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">My Teaching Activity (This Week)</h5>
          <ul class="list-group">
            <% if (typeof weekRecords !== 'undefined' && weekRecords.length > 0) { %>
              <% weekRecords.forEach(function(rec) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span><strong><%= rec.date %></strong> - <%= rec.class %> - <%= rec.subject %> - <%= rec.period %></span>
                  <span class="badge bg-info"><%= rec.status %></span>
                </li>
              <% }) %>
            <% } else { %>
              <li class="list-group-item text-center">No records for this week yet.</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 